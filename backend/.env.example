# ============= DATABASE =============
# Connect to Supabase via connection pooling
DATABASE_URL="DB_CONNECTION_STRING_WITH_PASSWORD"

# Direct connection to the database. Used for migrations
DIRECT_URL="DB_CONNECTION_STRING_WITH_PASSWORD"

# ============= SERVER =============
NODE_ENV=development
PORT=4000
FRONTEND_URL=http://localhost:3000

# ============= JWT AUTHENTICATION =============
JWT_SECRET=your_super_secret_jwt_key_here_min_10_chars
JWT_EXPIRES_IN=7d

# ============= EMAIL (SMTP) =============
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM="VMC Civic Issues <noreply@vmc.gov.in>"

# ============= CLOUDINARY (Image Upload) =============
# Get these from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ============= GOOGLE VISION AI =============
# Path to Google Cloud service account key file
GOOGLE_VISION_KEY_PATH=./google-vision-key.json
GOOGLE_CLOUD_PROJECT_ID=your-project-id